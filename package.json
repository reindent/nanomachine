{
  "name": "nanomachine",
  "version": "1.0.0",
  "description": "API bridge for nanobrowser extension",
  "main": "dist/src/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/bridge/index.js",
    "dev": "npm run start:docker && concurrently \"npm run dev:bridge\" \"npm run dev:server\" \"npm run dev:client\"",
    "dev:bridge": "ts-node bridge/index.ts",
    "dev:server": "ts-node server/src/index.ts",
    "dev:client": "cd client && npm run dev",
    "start:docker": "./scripts/vm/start",
    "stop:docker": "./scripts/vm/stop",
    "reinstall:docker": "./scripts/vm/reinstall",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "nanobrowser",
    "api",
    "bridge",
    "chrome",
    "extension"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/socket.io": "^3.0.1",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "rfb2": "^0.2.2",
    "sharp": "^0.34.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/node": "^20.17.30",
    "@types/ws": "^8.18.1",
    "concurrently": "^9.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
